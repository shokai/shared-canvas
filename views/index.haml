!!! XHTML
%html
  %head
    %title= @title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'UTF-8'}
    :javascript
      var app_root = "#{app_root}";
      var ws_url = "#{@@conf['ws_url']}"
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/main.js"}
  %body
    %h1= @title
    %div
      %div
        Image URL : 
        %input{:id => 'img_url', :type => 'text', :value => "#{app_root}/shokai-big.jpg", :size => '50'}
        %input{:id => 'btn_draw', :type => 'button', :value => 'draw'}
      %div{:id => 'stroke'}
        color : 
        %select{:id => 'color'}
          %option{:value => '#FF0000'} red
          %option{:value => '#00FF00'} green
          %option{:value => '#0000FF'} blue
        size : 
        %select{:id => 'size'}
          - for i in 1..10 do
            %option{:value => i}= i
    %canvas#img
