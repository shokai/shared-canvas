!!! XHTML
%html
  %head
    %title= @title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'UTF-8'}
    :javascript
      var app_root = "#{app_root}";
      var img_url = "#{@img_url}";
      var ws_url = "#{@@conf['ws_url']}"
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/draw.js"}
  %body
    %h1
      %a{:href => app_root}= @title
    %div
      source : 
      %a{:href => @img_url}= h @img_url
    %div
      %div{:id => 'stroke'}
        color : 
        %select{:id => 'color'}
          %option{:value => '#FF0000'} red
          %option{:value => '#00FF00'} green
          %option{:value => '#0000FF'} blue
        size : 
        %select{:id => 'size'}
          - for i in 1..10 do
            %option{:value => i}= i
      %div{:id => 'ctrl'}
        %input{:id => 'btn_reset', :type => 'button', :value => 'RESET'}
    %canvas#img
